#!/bin/sh
# start-sumologic: Write /etc/sumo.conf from ENV variables and start collector

set -e

sed -i "s/<SUMOLOGIC_ACCESSID>/$SUMO_ACCESS_ID/" /etc/sumo.conf
sed -i "s/<SUMOLOGIC_ACCESSKEY>/$SUMO_ACCESS_KEY/" /etc/sumo.conf
sed -i "s/<SUMOLOGIC_NAME>/$SUMO_COLLECTOR_NAME/" /etc/sumo.conf
sed -i "s/<SUMOLOGIC_SOURCES>/$SUMO_SOURCES_JSON/" /etc/sumo.conf

service collector start
